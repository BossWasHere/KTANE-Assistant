<api:ModulePage x:Class="KTANEAssistant.Pages.Modules.MorseCodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:KTANEAssistant.Controls"
      xmlns:api="clr-namespace:KTANEAssistant.API"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MorseCodePage" x:Name="PageMorseCode">

    <Grid>
        <control:PlaceholderTextbox x:Name="TextField" FontSize="24" VerticalAlignment="Top" Padding="2" TextWrapping="Wrap" TextChanged="TextInput_TextChanged" PlaceholderText="Start typing '.' for dots and '-' for dashes"></control:PlaceholderTextbox>
    </Grid>
</api:ModulePage>
